<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-gradient rounded", id: "new-form-color", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light label-responsive" %>
    <div class="col-10 form-responsive">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>
  <div class="form-group row justify-content-center mt-3 mb-4 ">
    <%= f.submit class: "btn btn-outline-light shadow-none btn-lg col-md-auto" %>
  </div>
<% end %>
