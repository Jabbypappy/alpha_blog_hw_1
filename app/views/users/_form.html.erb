<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %> <!-- Get the partial errors form -->
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-gradient rounded", id: "new-form-color", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light label-responsive" %>
          <div class="col-10 form-responsive">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :email, class: "col-2 col-form-label text-light label-responsive" %>
          <div class="col-10 form-responsive">
            <%= f.email_field :email, rows: 13, class: "form-control shadow rounded", placeholder: "Enter your email" %> <!-- Take up 13 rows -->
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :password, class: "col-2 col-form-label text-light label-responsive" %>
          <div class="col-10 form-responsive">
            <%= f.password_field :password, rows: 13, class: "form-control shadow rounded", placeholder: "Choose a password" %> <!-- Take up 13 rows -->
          </div>
        </div>

        <div class="form-group row justify-content-center mt-3 mb-4 ">
          <%= f.submit "Sign up", class: "btn btn-outline-light shadow-none btn-lg col-md-auto" %> <!-- IMPORTANT, no comma needed between submit and class! BUT since we've added what it needs to say "Sign up" we DO need a comma now, refer to other form partial for articles to see example without comma necessity. -->
        </div>
      <% end %>
    </div>

    <div class="col-md-3 text-center mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, id: "new-form-color-cancel" %>
    </div>
  </div>

</div>